meta {
  name: auth login
  type: http
  seq: 1
}

post {
  url: {{protocol}}{{base-url}}/auth/login
  body: json
  auth: inherit
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "username": {{username}},
    "password": {{password}}
  }
}

script:post-response {
  bru.setVar('bearer-token', res.body.token)
}

settings {
  encodeUrl: true
}
